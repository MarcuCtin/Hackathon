{
  "info": {
    "name": "Fitter Chat API - Filtered by Day",
    "description": "API Collection for Chat filtering by day",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Chat Messages",
      "item": [
        {
          "name": "AI Chat - Water Intake",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"I drank 5 glasses of water today\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ai/chat",
              "host": ["{{base_url}}"],
              "path": ["api", "ai", "chat"]
            }
          }
        },
        {
          "name": "AI Chat - Sleep",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"I slept 7 hours last night\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ai/chat",
              "host": ["{{base_url}}"],
              "path": ["api", "ai", "chat"]
            }
          }
        },
        {
          "name": "AI Chat - Workout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"I did cardio for 45 minutes\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ai/chat",
              "host": ["{{base_url}}"],
              "path": ["api", "ai", "chat"]
            }
          }
        },
        {
          "name": "AI Chat - Meal",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"I ate pasta for lunch\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ai/chat",
              "host": ["{{base_url}}"],
              "path": ["api", "ai", "chat"]
            }
          }
        }
      ]
    },
    {
      "name": "Chat Messages - NEW FILTERING",
      "item": [
        {
          "name": "Get All Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/chat/messages?limit=50",
              "host": ["{{base_url}}"],
              "path": ["api", "chat", "messages"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            }
          }
        },
        {
          "name": "Get Messages by Day - TODAY",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/chat/messages?day=2024-01-15",
              "host": ["{{base_url}}"],
              "path": ["api", "chat", "messages"],
              "query": [
                {
                  "key": "day",
                  "value": "2024-01-15",
                  "description": "ISO date format (YYYY-MM-DD)"
                }
              ]
            }
          }
        },
        {
          "name": "Get Messages by Day - YESTERDAY",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/chat/messages?day=2024-01-14",
              "host": ["{{base_url}}"],
              "path": ["api", "chat", "messages"],
              "query": [
                {
                  "key": "day",
                  "value": "2024-01-14"
                }
              ]
            }
          }
        },
        {
          "name": "Get Messages by Session and Day",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/chat/messages?sessionId=session_123&day=2024-01-15",
              "host": ["{{base_url}}"],
              "path": ["api", "chat", "messages"],
              "query": [
                {
                  "key": "sessionId",
                  "value": "session_123"
                },
                {
                  "key": "day",
                  "value": "2024-01-15"
                }
              ]
            }
          }
        },
        {
          "name": "Get Messages Grouped by Day",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/chat/messages/by-day",
              "host": ["{{base_url}}"],
              "path": ["api", "chat", "messages", "by-day"]
            },
            "description": "Returns all messages grouped by day, sorted newest first"
          }
        }
      ]
    },
    {
      "name": "Chat Sessions",
      "item": [
        {
          "name": "Get All Sessions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/chat/sessions",
              "host": ["{{base_url}}"],
              "path": ["api", "chat", "sessions"]
            }
          }
        },
        {
          "name": "Save Manual Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"user\",\n  \"content\": \"Hello, this is a test message\",\n  \"sessionId\": \"session_test_123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/chat/save",
              "host": ["{{base_url}}"],
              "path": ["api", "chat", "save"]
            }
          }
        }
      ]
    }
  ]
}
