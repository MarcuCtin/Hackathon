          "name": "Get All Dashboard Data",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/dashboard/data",
              "host": ["{{base_url}}"],
              "path": ["api", "dashboard", "data"]
            },
            "description": "Returns all dashboard widgets: daily progress, daily routine, AI synced actions, achievements, etc."
          }
